<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmCart"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirmCart_heading_txt"
            android:text="Please confirm your Shipment Details"
            android:textSize="19sp"
            android:layout_margin="25dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirmCart_RelativeLayout1"
            android:layout_below="@+id/confirmCart_heading_txt"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            >

            <TextView
                android:id="@+id/confirmCart_userPhone_key_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number: "
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/confirmCart_userPhone_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/confirmCart_userPhone_key_txt"
                android:text="Phone Number:"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/confirmCart_userName_key_txt"
                android:layout_below="@+id/confirmCart_userPhone_key_txt"
                android:text="Name: "
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="19sp"/>

            <TextView
                android:id="@+id/confirmCart_userName_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/confirmCart_userName_key_txt"
                android:layout_below="@+id/confirmCart_userPhone_txt"
                android:layout_marginTop="10dp"
                android:text="Name"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/confirmCart_totalAmount_key_txt"
                android:layout_below="@+id/confirmCart_userName_key_txt"
                android:text="Total Amount: "
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="19sp"/>

            <TextView
                android:id="@+id/confirmCart_totalAmount_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/confirmCart_totalAmount_key_txt"
                android:layout_below="@+id/confirmCart_userName_txt"
                android:layout_marginTop="10dp"
                android:text="Total Amount"
                android:textSize="19sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirmCart_DeliveryName_textView"
            android:text="Delivery Name:"
            android:layout_below="@+id/confirmCart_RelativeLayout1"
            android:textSize="19dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/confirmCart_DeliveryName_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirmCart_DeliveryName_textView"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_design"
            android:hint="Delivery Name (Optional)"
            android:padding="15dp"
            android:textSize="18sp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirmCart_deliveryPhone_txt"
            android:text="Delivery Phone Number:"
            android:layout_below="@+id/confirmCart_DeliveryName_EditText"
            android:textSize="19dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="25dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/confirmCart_deliveryPhone_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirmCart_deliveryPhone_txt"
            android:background="@drawable/input_design"
            android:hint="Phone Number (Optional)"
            android:maxLength="10"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirmCart_deliveryAddress_TextView"
            android:text="Delivery Address:"
            android:layout_below="@+id/confirmCart_deliveryPhone_editText"
            android:textSize="19dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="25dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/confirmCart_deliveryAddress_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirmCart_deliveryAddress_TextView"
            android:background="@drawable/input_design"
            android:hint="Home Address"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirmCart_deliveryAddress_EditText"
            android:layout_marginTop="20dp"
            android:id="@+id/confirmCart_RelativeLayout2"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Option: "
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/confirmCart_Payment_textView"
                />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/confirmCart_COD_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/purple_200"
                android:text="Cash-On-Delivery"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/dark_grey"
                android:layout_below="@+id/confirmCart_Payment_textView"

                />

        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:id="@+id/cartConfirm_confirmButton"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/buttons"
            android:textStyle="bold"
            android:layout_below="@+id/confirmCart_RelativeLayout2"
            android:textColor="@color/white"
            android:padding="10dp" />

    </RelativeLayout>

</RelativeLayout>