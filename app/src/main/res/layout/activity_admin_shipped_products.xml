<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout class="androidx.appcompat.app.AlertController$RecycleListView" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminShippedOrderActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_200"
        android:layout_alignParentTop="true"
        android:id="@+id/adminShippedOrder_relativelayout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shipped Placed"
            android:textSize="25dp"
            android:id="@+id/adminShippedOrder_title_txt"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/adminShippedOrder_list"
        android:layout_below="@+id/adminShippedOrder_relativelayout"
        android:layout_above="@+id/adminShippedOrder_OrderPlaced_btn"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:text="Order Placed"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:layout_above="@+id/adminSippedOrder_DeliveredProducts_btn"
        android:id="@+id/adminShippedOrder_OrderPlaced_btn"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:text="Orders Delivered"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/adminSippedOrder_DeliveredProducts_btn"
        />

</RelativeLayout>