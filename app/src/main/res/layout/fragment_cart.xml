<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Cart.CartFragment"
    android:id="@+id/cart_relativelayout_1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_200"
        android:layout_alignParentTop="true"
        android:id="@+id/cart_relativelayout_2">

        <TextView
            android:id="@+id/cart_price_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Price: â‚¹ 0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:text="Congratulations your order has been placed. Soon it will be verified."
        android:visibility="gone"
        android:id="@+id/msg1"
        android:textSize="20dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cart_list"
        android:layout_below="@+id/cart_relativelayout_2"
        android:layout_above="@id/cart_next_btn"
        />



    <Button
        android:id="@+id/cart_next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/purple_200"
        android:text="Next"
        android:textColor="@color/white"
        android:background="@drawable/buttons"
        android:layout_margin="10dp"
        />

</RelativeLayout>