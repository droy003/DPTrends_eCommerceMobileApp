<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DPTrends" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="actionBarStyle">@style/MyActionBar</item>



        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--<item name="android:statusBarColor" tools:targetApi="l">@color/purple_200</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DPTrends.TitleStyle" parent="@style/Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>

    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/purple_200</item>
        <item name="titleTextStyle">@style/Theme.DPTrends.TitleStyle</item>
        <item name="elevation">15dp</item>
    </style>

    <style name="Theme.DPTrends.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DPTrends.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DPTrends.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>